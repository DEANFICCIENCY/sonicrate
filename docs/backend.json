
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "description": "User profile data",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string" },
        "photoURL": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["google.com", "apple.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User account documents"
    }
  }
}
