
{
  "entities": {
    "UserEmail": {
      "title": "UserEmail",
      "type": "object",
      "description": "Stores user email addresses, subscription status, and roles.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user email entry (matches User UID)."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "subscribed": {
          "type": "boolean",
          "description": "Indicates whether the user is subscribed to the newsletter."
        },
        "role": {
          "type": "string",
          "enum": [
            "admin",
            "user"
          ],
          "description": "User role for access control."
        }
      },
      "required": [
        "id",
        "email",
        "subscribed"
      ]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Represents a sample pack or sound product.",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "discountedPrice": {
          "type": "number"
        },
        "saveAmount": {
          "type": "number"
        },
        "descTitle": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tracks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "bpm": {
                "type": "string"
              },
              "key": {
                "type": "string"
              }
            }
          }
        },
        "technicalInfo": {
          "type": "object",
          "properties": {
            "totalSounds": {
              "type": "number"
            },
            "drumLoops": {
              "type": "number"
            },
            "drumSounds": {
              "type": "number"
            },
            "drumFills": {
              "type": "number"
            },
            "melodyLoops": {
              "type": "number"
            },
            "projectMixTemplates": {
              "type": "number"
            },
            "percLoops": {
              "type": "number"
            },
            "drumMidi": {
              "type": "number"
            }
          }
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com",
      "anonymous"
    ]
  },
  "firestore": {
    "/emails/{emailId}": {
      "schema": {
        "$ref": "#/backend/entities/UserEmail"
      },
      "description": "Collection storing user email subscription statuses and roles, keyed by User UID."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/backend/entities/Product"
      },
      "description": "Collection of sample packs and sound design products."
    }
  }
}
