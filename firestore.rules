
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- NEWSLETTER RULES ---
    match /emails/{emailId} {
      allow get: if isOwner(emailId);
      allow list: if isOwner(emailId);
      allow create: if isOwner(emailId) && request.resource.data.id == emailId;
      allow update: if isOwner(emailId) && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(emailId);
    }

    // --- PRODUCT RULES ---
    match /products/{productId} {
      /**
       * @description Products are publicly readable.
       * Writes are denied (managed via admin or console).
       */
      allow read: if true;
      allow write: if false;
    }

    // --- DEFAULT DENY ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
