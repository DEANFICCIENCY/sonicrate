
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/emails/$(request.auth.uid)).data.role == "admin";
    }

    // --- NEWSLETTER & USER DATA RULES ---
    match /emails/{emailId} {
      allow get: if isOwner(emailId);
      allow list: if isOwner(emailId);
      // Allow creation for self. Role cannot be set by user during creation unless they are admin (which is circular, so we stick to owner for base fields).
      // We prevent users from escalating their own role.
      allow create: if isOwner(emailId) && (!('role' in request.resource.data) || request.resource.data.role == 'user');
      allow update: if isOwner(emailId) && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role);
      allow delete: if isOwner(emailId);
    }

    // --- PRODUCT RULES ---
    match /products/{productId} {
      /**
       * @description Products are publicly readable.
       * Writes are allowed only for users with the 'admin' role in /emails/{uid}.
       */
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- DEFAULT DENY ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
